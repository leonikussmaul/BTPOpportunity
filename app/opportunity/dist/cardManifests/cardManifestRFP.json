{
	"_version": "1.25.0",
	"sap.app": {
		"id": "card.explorer.sample.table.card.employees",
		"title": "Employees",
		"applicationVersion": {
			"version": "1.0.0"
		},
		"type": "card"
	},
	"sap.ui": {
		"deviceTypes":{
			"desktop": true,
			"phone": true,
			"tablet": true
		},
		"technology": "UI5"
	},
	"sap.card": {
		"type": "Table",
		"extension": "./SampleExtension",
		"header": {
			"title": "RFP's",
			"subTitle": "Incoming RFP's",
			"status": {
				"text": "by most recent"
			}
		},
		"content": {
			"maxItems": 5,
            "data": {
                "request": {
                    "url": "/Opportunity/teamProjects",
                    "method": "GET",
                    "parameters": {
                        "$format": "json",
                        "$filter": "status eq 'RFP'",
						"$orderby": "addedOn desc"
                    }
                },
                "updateInterval": 300,
                "path": "/value"
            },
			"row": {
				"columns": [
					
					{
						"title": "Project",
						"value": "{account}",
                        "identifier": true
					},
                    {
						"title": "Owner",
                        "value": "{primaryContact}",
						"icon": {
							"src": "{Icon}",
							"shape": "Circle"
						}
					},
					{
						"title": "Value",
						"value": "{= extension.formatters.projectValueFormatter(${projectValue}) }",
                        "width": "35%"
					}
				],
				"actions": [
					{
						"type": "Navigation",
						"target": "_self",
						"parameters": {
							"url": "/app/opportunity/webapp/index.html#/Resources/{userID_inumber}" 
						}
					}
				]
			}
		}
	}
}