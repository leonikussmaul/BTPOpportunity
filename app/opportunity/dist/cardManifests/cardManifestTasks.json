{
	"_version": "1.15.0",
	"sap.app": {
		"id": "card.explorer.table.card",
		"type": "card",
		"title": "Sample of a Table Card",
		"subTitle": "Sample of a Table Card",
		"applicationVersion": {
			"version": "1.0.0"
		},
		"shortTitle": "A short title for this Card",
		"info": "Additional information about this Card",
		"description": "A long description for this Card",
		"tags": {
			"keywords": [
				"Table",
				"Card",
				"Sample"
			]
		}
	},
	"sap.ui": {
		"technology": "UI5",
		"icons": {
			"icon": "sap-icon://table-view"
		}
	},
	"sap.card": {
		"type": "Table",
        "data": {
            "request": {
                "url": "/Opportunity/opportunityActionItems",
                "method": "GET",
                "parameters": {
                    "$format": "json",
                    "$orderby": "actionDueDate desc"
                }
            },
            "updateInterval": 300,
            "path": "/value"
        },
		"header": {
			"title": "Open Tasks",
			"subTitle":  "Sorted by Due Date | Total: {localModel>/opportunityActionItemsLength}"
		},
		"content": {
			"maxItems": 6,
			"row": {
				"columns": [{
						"title": "Task",
						"value": "{actionTitle}",
                        "width": "30%"
					},
					{
						"title": "Account",
                        "identifier": true,
						"value": "{actionCustomer}"
					},
					{
						"title": "Owner",
						"value": "{actionOwner}"
						
					},
					{
						"title": "Due",
						"value": "{actionDueDate}",
                        "state": "Warning",
                        "width": "20%"

					},
					{
						"title": "Progress",
                        "width": "20%",
						"progressIndicator": {
							"percent": "{actionProgress}",
							"text": "{= format.percent(${actionProgress} / 100)}",
                            "state": "{= ${actionProgress} < 25 ? 'Error' : (${actionProgress} >= 25 && ${actionProgress} < 75 ? 'Warning' : 'Success') }"
							
						}
					}
				],
                "actions": [
					{
						"type": "Navigation",
						"parameters": {
							"url": "/opportunity/webapp/index.html#/TaskReport/{ID}" 
						}
					}
				]
			}
		}
	}
}
