{
    "sap.app": {
        "id": "my.new.card",
        "type": "card",
        "applicationVersion": {
            "version": "1.0.0"
        }
    },
    "sap.card": {
        "type": "List",
        "header": {
            "title": "Top 5 Opportunities",
            "subTitle": "At a Glance",
			"actions": [
				{
					"type": "Navigation",
					"parameters": {
						"url": "/opportunity/webapp/index.html#/MainReport"
					}
				}
			],
            "unitOfMeasurement": "EUR",
            "icon": {
                "src": "sap-icon://upstacked-chart"
            },
			"status": {
				"text": "5 of {localModel>/opportunityHeaderLength}"
			},
            "data": {
                "path": "/opportunityHeader"
            }
        },
        "content": {
            "maxItems": 5,
            "data": {
                "request": {
                    "url": "/Opportunity/opportunityHeader",
                    "method": "GET",
                    "parameters": {
                        "$format": "json",
						"$orderby": "opportunityValue desc"
                    }
                },
                "updateInterval": 300,
                "path": "/value"
            },
            "item": {
                "title": {
                    "value": "{account}"
                },
                "description": {
                    "value": "{marketUnit}"
                },
                "highlight": "{= ${opportunityValue} > 100 ? 'Success' : (${opportunityValue} > 25 ? 'Warning' : 'Error') }",

                "info": {
					"value": "{opportunityValue}k â‚¬",
                    "state":  "{= ${opportunityValue} > 100 ? 'Success' : (${opportunityValue} > 25 ? 'Warning' : 'Error') }",
					"showStateIcon": true
				},
				"actions": [
					{
						"type": "Navigation",
                        "target": "_self",
						"parameters": {
							"url": "/app/opportunity/webapp/index.html#/OpportunityDetail/{opportunityID}" 
						}
					}
				]

            }
        }
    }
}