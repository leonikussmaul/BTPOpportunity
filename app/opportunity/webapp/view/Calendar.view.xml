<mvc:View
	controllerName="opportunity.opportunity.controller.Calendar"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:unified="sap.ui.unified"
	xmlns="sap.m">
	<VBox class="sapUiSmallMargin">
		<PlanningCalendar
			id="PC1"
			startDate="{path: '/projectStartDate'}"
			rows="{path: '/people'}"
			appointmentsVisualization="Filled" 
			appointmentSelect="handleAppointmentSelect"
			showEmptyIntervalHeaders="false"
			showWeekNumbers="true" builtInViews="Month,OneMonth,Week,Day">
				<toolbarContent>
				<Title text="Team Overview" titleStyle="H4"/>
				<!-- <ToggleButton icon="sap-icon://decrease-line-height"
							  tooltip="Toggle Day Names Line"
							  press="toggleDayNamesLine"/> -->
			</toolbarContent>
			<rows>
				<PlanningCalendarRow
					icon="{pic}"
					title="{name}"
					text="{role}"
					appointments="{path : 'appointments', templateShareable: false}"
					intervalHeaders="{path: 'headers', templateShareable: false}">
					<customData>
						<core:CustomData key="emp-name" value="{name}" writeToDom="true"/>
					</customData>
					<appointments>
						<unified:CalendarAppointment
							startDate="{projectStartDate}"
							endDate="{projectEndDate}"
							icon="{pic}"
							title="{account}"
							text="{descriptionText}"
							type="{type}"
							tentative="{tentative}">
						</unified:CalendarAppointment>
					</appointments>
					<intervalHeaders>
						<unified:CalendarAppointment
							startDate="{projectStartDate}"
							endDate="{projectEndDate}"
							icon="{pic}"
							title="{account}"
							type="{type}">
						</unified:CalendarAppointment>
					</intervalHeaders>
				</PlanningCalendarRow>
			</rows>
		</PlanningCalendar>
		
	</VBox>
</mvc:View>