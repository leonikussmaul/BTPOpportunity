<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:grid="sap.ui.layout.cssgrid"
	xmlns:f="sap.f"
	xmlns:tnt="sap.tnt"
	xmlns:dnd="sap.ui.core.dnd"
	xmlns:dnd-grid="sap.f.dnd"
>
	<f:GridList
		id="gridList"
		mode="Delete"
		items="{
  path: 'pageModel>/actionItems'
}"
		selectionChange="onSelectionChange"
		delete="onDelete"
		class="sapUiResponsiveContentPadding"
		sticky="ColumnHeaders,HeaderToolbar"
        >
		<f:dragDropConfig>
			<dnd:DragInfo sourceAggregation="items" />
			<dnd-grid:GridDropInfo targetAggregation="items" dropPosition="Between" dropLayout="Horizontal" drop="onDrop" />
		</f:dragDropConfig>
		<f:headerToolbar>
			<Toolbar >
				<ToolbarSpacer />
				<Button icon="sap-icon://add" tooltip="{i18n>addToDoItem}" press="onAddToDoItem"/>
				<Button icon="sap-icon://sort" tooltip="{i18n>sortList}" press="onSortToDoItem"/>
				<Button icon="sap-icon://filter" tooltip="{i18n>filterList}" press="onFilterToDoItem"/>
				<Button icon="sap-icon://group-2" tooltip="{i18n>groupList}" press="onGroupToDoItem"/>
				<!-- <Button icon="sap-icon://delete" tooltip="Delete To Do Item" press="onDeleteToDoItem"/> -->
				<SearchField  />
			</Toolbar>
		</f:headerToolbar>
		<f:customLayout>
			<grid:GridBasicLayout gridTemplateColumns="repeat(auto-fit, minmax(16rem, 1fr))" gridGap="0.5rem" />
		</f:customLayout>
		<!-- 
		<f:GridListItem
			detailPress="onDetailPress"
			press="onPress"><VBox height="100%"><HBox height="100%" class="sapUiSmallMargin" alignItems="Center" ><VBox><Title text="{account}" wrapping="true" /><Label text="{primaryContact}" wrapping="true" /></VBox></HBox></VBox></f:GridListItem> -->
		<f:GridListItem highlight="Success">
			<VBox height="100%" justifyContent="SpaceBetween">
				<layoutData>
					<FlexItemData growFactor="1" shrinkFactor="0" />
				</layoutData>
				<VBox class="sapUiSmallMargin">
					<HBox justifyContent="SpaceBetween">
						<Title text="{pageModel>actionOwner}" wrapping="true" />
					</HBox>
					<Label text="{pageModel>actionTask}" wrapping="true" class="sapUiTinyMarginBottom" />
					<Avatar src="./images/Sarah.jpeg" displayShape="Circle" customDisplaySize="2.5rem" displaySize="Custom"  class="imageDisplayBlock" />
				</VBox>
				<OverflowToolbar design="Solid">
					<ToolbarSpacer />
					<tnt:InfoLabel text="{pageModel>actionTopic}" colorScheme="{path:' pageModel>actionTopic', formatter:'.formatter.topicColorSchemeFormatter'}" visible="{= ${pageModel>actionTopic} !== null}" renderMode="Narrow" />
				</OverflowToolbar>
			</VBox>
		</f:GridListItem>
	</f:GridList>
</core:FragmentDefinition>