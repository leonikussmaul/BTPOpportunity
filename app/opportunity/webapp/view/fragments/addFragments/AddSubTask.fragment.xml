<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
>
    <Dialog
        class="sapUiPopupWithPadding"
        contentWidth="30%"
        resizable="true"
        draggable="true"
    >
        <customHeader>
            <Bar>
                <contentMiddle>
                    <Title text="{i18n>addSubTaskFor} {actionCustomer}" />
                </contentMiddle>
                <!-- <contentRight>
                    <Button
                        icon="sap-icon://decline"
                        press="onCancelDialogPress"
                    />
                </contentRight> -->
            </Bar>
        </customHeader>
        <form:SimpleForm editable="true">
            <Label
                text="Title"
                required="true"
            />
            <TextArea
                value="{AddSubTaskModel>/subTask}" valueState="{valueState>/valueState}" valueStateText="{valueState>/valueStateText}"
                liveChange="onChangeValueState"
                id="subTaskInput"
                maxLength="5000"
                placeholder="{i18n>subTaskPlaceholder}"
            />

            <Label text="Owner" />
            <ComboBox
                selectedKey="{AddSubTaskModel>/subTaskOwner}"
                placeholder="{i18n>subTaskOwnerPlaceholder}"
                items="{
                                    path: '/opportunityPrimaryContactVH',
                                    sorter: {
                                                path: 'primaryContact',
                                                descending: false
                                            }
                                    }"
            >
                <core:Item
                    key="{primaryContact}"
                    text="{primaryContact}"
                />
            </ComboBox>

            <Label text="{i18n>dueDate}" />
            <DatePicker
                value="{
                    path: 'AddSubTaskModel>/subTaskDueDate',
                    type: 'sap.ui.model.type.Date',
                    'formatOptions': {
                        'pattern': 'MM-dd-yyyy'
                    }
                }"
                id="subTaskDueDateID"
            />

            <Label text="Status" />
            <ComboBox
                selectedKey="{AddSubTaskModel>/subTaskStatus}"
                placeholder="{i18n>subTaskStatus}"
                items="{
                                    path: '/opportunitySubTaskStatus',
                                    sorter: {
                                                path: 'subTaskStatus',
                                                descending: true
                                            }
                                    }"
            >
                <core:Item
                    key="{subTaskStatus}"
                    text="{subTaskStatus}"
                />
            </ComboBox>
        </form:SimpleForm>
        <footer>
            <Toolbar design="Auto">
                <content>
                    <ToolbarSpacer />
                       <Button  
                        text="Cancel"
                        press="onCancelDialogPress"
                    ></Button>
                    <Button
                        type="Accept"
                        text="{i18n>Submit}"
                        press="onSubmitNewSubTask"
                    />
                </content>
            </Toolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>
