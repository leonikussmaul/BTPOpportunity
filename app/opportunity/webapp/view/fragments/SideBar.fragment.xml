<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:tnt="sap.tnt"
    xmlns:core="sap.ui.core"
>
    <tnt:SideNavigation
        id="sideNavigation"
        expanded="false"
        selectedKey="{global>/selectedKey}"
        itemSelect=".onItemSelect"
    >
        <tnt:NavigationList>
            <tnt:NavigationListItem
                icon="sap-icon://menu2"
                hasExpander="false"
                select="onToggleSideMenu"
            />

            <tnt:NavigationListItem
                text="Opportunities"
                key="Opportunities"
                icon="sap-icon://target-group"
                select="onNavToOpportunities"
                tooltip="Go to the Opportunities Report"
            />

            <tnt:NavigationListItem
                text="Genie AI"
                key="GenieAI"
                icon="sap-icon://ai"
                select="onNavToGenieAIMain"
                tooltip="Go to the Genie AI Report"
            />

            <tnt:NavigationListItem
                text="Team Engagement"
                key="TeamEngagement"
                icon="sap-icon://meeting-room"
                select="onNavToTeamEngagement"
                tooltip="Team Engagement"
            />

            <tnt:NavigationListItem
                text="Engagement"
                key="Engagement"
                select="onOpenIndividualEngagement"
                icon="sap-icon://account"
            />
        </tnt:NavigationList>
        <tnt:fixedItem>
            <tnt:NavigationList>
                <tnt:NavigationListItem
                    text="Calendar"
                    key="Calendar"
                    select="onOpenCalendar"
                    icon="sap-icon://appointment-2"
                />
                <tnt:NavigationListItem
                    text="Team Chart"
                    key="TeamChart"
                    select="onOpenTeamChart"
                    icon="sap-icon://org-chart"
                />

                <tnt:NavigationListItem
                    text="About Demand Genius"
                    key="About"
                    select="onOpenAbout"
                    icon="sap-icon://hint"
                />
            </tnt:NavigationList>
        </tnt:fixedItem>
    </tnt:SideNavigation>
</core:FragmentDefinition>
