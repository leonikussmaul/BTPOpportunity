<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:smartForm="sap.ui.comp.smartform"
	xmlns:smartField="sap.ui.comp.smartfield"
	xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<smartForm:SmartForm id="generalSmartForm" customData:useSmartField="true" validationMode="Async" editable="{editModel>/editMode}" 
	app:defaultCheckBoxDisplayBehaviour="OnOff"
			app:defaultDropDownDisplayBehaviour="idAndDescription" >
		<smartForm:customData>
			<core:CustomData key="suppressUnit" value="false" />
			<core:CustomData key="defaultDropDownDisplayBehaviour" value='descriptionAndId' />
		</smartForm:customData>
		<smartForm:layout>
			<smartForm:ColumnLayout columnsM="2" columnsL="3" columnsXL="4"/>
		</smartForm:layout>
		<!-- header group  -->
		<smartForm:Group  label="Header" visible="{editModel>/editMode}">
			<smartForm:GroupElement>
				<smartField:SmartField value="{account}" />
			</smartForm:GroupElement>
			<smartForm:GroupElement >
				<smartField:SmartField  value="{marketUnit}" customData:mandatory="true">
					<smartField:configuration>
						<smartField:Configuration controlType="dropDownList" displayBehaviour="descriptionAndId" />
					</smartField:configuration>
				</smartField:SmartField>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField id="statusSmartField" value="{topic}"  />
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{priority}" />
			</smartForm:GroupElement>
		</smartForm:Group>
		<!-- dates group  -->
		<smartForm:Group  label="Dates" >
			<smartForm:GroupElement>
				<smartField:SmartField value="{opportunityCreatedQuarter}" />
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{opportunityClosedQuarter}" />
			</smartForm:GroupElement>
			<smartForm:GroupElement >
				<smartField:SmartField value="{opportunityStartDate}" />
			</smartForm:GroupElement>
			<smartForm:GroupElement >
				<smartField:SmartField value="{opportunityDueDate}" />
			</smartForm:GroupElement>
		</smartForm:Group >
		<!-- value group -->
		<smartForm:Group  label="Value">
			<smartForm:GroupElement label="Value">
				<smartField:SmartField value="{opportunityValue}"  />
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{opportunityInCRM}" />
				<!-- <smartField:SmartField value="{opportunityInCRM}"><smartField:configuration><smartField:Configuration displayBehaviour="TrueFalse" /></smartField:configuration></smartField:SmartField> -->
			</smartForm:GroupElement>
		</smartForm:Group>
	</smartForm:SmartForm>
</core:FragmentDefinition>


	