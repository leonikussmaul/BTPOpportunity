<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.f"
    xmlns:u="sap.ui.unified"
    xmlns:c="sap.ui.comp"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:form="sap.ui.layout.form"
    xmlns:rte="sap.ui.richtexteditor"
    xmlns:micro="sap.suite.ui.microchart"
>
    <Dialog
        id="myCreateWizard"
        resizable="true"
        draggable="true"
        verticalScrolling="false"
        contentHeight="700px"
        contentWidth="1000px"
    >
        <customHeader>
            <Bar>
                <contentRight>
                    <ToggleButton
                        icon="sap-icon://full-screen"
                        press="onFullScreenButtonPress"
                    />
                </contentRight>
            </Bar>
        </customHeader>
        <f:DynamicPage
            stickySubheaderProvider="CreateWizard"
            toggleHeaderOnTitleClick="false"
            class="sapUiNoContentPadding"
            showFooter="true"
        >
            <f:title>
                <f:DynamicPageTitle>
                    <f:heading>
                        <Title text="Create a Genie AI Workshop" />
                    </f:heading>
                </f:DynamicPageTitle>
            </f:title>
            <f:content>
                <Wizard
                    complete="onCreateNewItem"
                    id="CreateWizard"
                    renderMode="Page"
                >
                    <steps>
                        <!-- Step 1 -->
                        <WizardStep
                            id="WizardStep1"
                            title="Workshop Information"
                            validated="true"
                        >
                            <form:SimpleForm editable="true">
                                <HBox
                                    alignItems="Start"
                                    justifyContent="Center"
                                >
                                    <SegmentedButton
                                        id="segmentedWorkshopBtn"
                                        selectedKey="{viewModel>/workshopType}"
                                    >
                                        <items>
                                            <SegmentedButtonItem
                                                key="Customer"
                                                width="200px"
                                                text="Customer"
                                                icon="sap-icon://da-2"
                                            />
                                            <SegmentedButtonItem
                                                width="200px"
                                                key="Partner"
                                                text="Partner"
                                                icon="sap-icon://decision"
                                            />
                                            <SegmentedButtonItem
                                                width="200px"
                                                key="Internal"
                                                text="Internal"
                                                icon="sap-icon://education"
                                            />
                                        </items>
                                    </SegmentedButton>
                                </HBox>

                                <Label
                                    text="Name"
                                    required="true"
                                />
                                <Input
                                    value="{viewModel>/name}"
                                    id="name"
                                    valueState="{valueState>/valueState}"
                                    valueStateText="{valueState>/valueStateText}"
                                    placeholder="Enter a name for the workshop"
                                />

                                <Label text="Description" />
                                <TextArea
                                    value="{viewModel>/description}"
                                    placeholder="Enter a workshop description"
                                />

                                <Label text="Level" />
                                <ComboBox
                                    id="level"
                                    selectedKey="{viewModel>/level}"
                                >
                                    <items>
                                        <core:ListItem
                                            key="Beginner"
                                            text="Beginner"
                                        />
                                        <core:ListItem
                                            key="Intermediate"
                                            text="Intermediate"
                                        />
                                        <core:ListItem
                                            key="Advanced"
                                            text="Advanced"
                                        />
                                    </items>
                                </ComboBox>

                                <Label text="Status" />
                                <SegmentedButton id="segmentedStatus">
                                    <items>
                                        <SegmentedButtonItem
                                            key="Lead"
                                            text="Lead"
                                            icon="sap-icon://flag-2"
                                        />
                                        <SegmentedButtonItem
                                            key="Opportunity"
                                            text="Opportunity"
                                            icon="sap-icon://overlay"
                                        />
                                        <SegmentedButtonItem
                                            key="Paused"
                                            text="Paused"
                                            icon="sap-icon://pause"
                                        />
                                        <SegmentedButtonItem
                                            key="Delivery"
                                            text="Delivery"
                                            icon="sap-icon://activate"
                                        />
                                        <SegmentedButtonItem
                                            key="Completed"
                                            text="Completed"
                                            icon="sap-icon://checklist-item"
                                        />
                                    </items>
                                </SegmentedButton>
                            </form:SimpleForm>
                        </WizardStep>
                        <!-- Step 2 -->
                        <WizardStep
                            id="WizardStep2"
                            title="Logistics"
                        >
                            <form:SimpleForm editable="true">
                                <Label text="No. of Participants" />
                                <!-- <Input
                                    value="{viewModel>/email}"
                                    id="email"
                                    placeholder="How can we contact them?"
                                /> -->
                                <StepInput
                                    width="100px"
                                    value="{viewModel>/participants}"
                                    placeholder="20"
                                />

                                <Label text="Location" />
                                <Input
                                    value="{viewModel>/city}"
                                    id="city"
                                    placeholder="What city are they based in?"
                                />

                                <!-- <Label text="Country" /> -->
                                <Input
                                    value="{viewModel>/country}"
                                    id="country"
                                    placeholder="What country are they based in?"
                                />

                                <!-- <Input
                                    id="countryInput"
                                    showSuggestion="true"
                                    placeholder="Type a country"
                                    suggestionItems="{countryModel>/countries}"
                                    suggest="onSuggest"
                                    value="{viewModel>/country}"
                                    width="100%"
                                >
                                    <suggestionItems>
                                        <core:Item
                                            key="{countryModel>country}"
                                            text="{countryModel>country}"
                                        />
                                    </suggestionItems>
                                </Input> -->

                                <Label text="Workshop Dates" />
                                <DateRangeSelection
                                    id="DRS3"
                                    placeholder="i.e. Jul 8th, 2024 - Jul 9th, 2024"
                                    showCurrentDateButton="true"
                                    showFooter="true"
                                    change="handleChange"
                                    value="{
                                            'type': 'sap.ui.model.type.DateInterval',
                                            'parts': [
                                                {
                                                    'type': 'sap.ui.model.type.Date',
                                                    'path': '{viewModel>/workshopStartDate}'
                                                },
                                                {
                                                    'type': 'sap.ui.model.type.Date',
                                                   'path': '{viewModel>/workshopEndDate}'
                                                }
                                            ]
                                        }"
                                />
                            </form:SimpleForm>
                        </WizardStep>
                        <!-- Step 3 -->
                        <WizardStep
                            id="WizardStep3"
                            title="Notes"
                            validated="false"
                        >
                            <form:SimpleForm editable="true">
                                <Label text="Notes" />
                                <rte:RichTextEditor
                                    id="notesEditor"
                                    value="{viewModel>/notes}"
                                    width="100%"
                                    height="350px"
                                    showGroupFont="true"
                                    showGroupLink="true"
                                    showGroupUndo="true"
                                />
                            </form:SimpleForm>
                        </WizardStep>
                    </steps>
                </Wizard>
            </f:content>
            <f:footer>
                <Toolbar>
                    <content>
                        <ToolbarSpacer />
                        <Button
                            text="{i18n>cancel}"
                            press="onCloseWizardPress"
                        />
                        <Button
                            type="Accept"
                            text="{i18n>save}"
                            press="onSaveGeniePress"
                        />
                    </content>
                </Toolbar>
            </f:footer>
        </f:DynamicPage>
    </Dialog>
</core:FragmentDefinition>
