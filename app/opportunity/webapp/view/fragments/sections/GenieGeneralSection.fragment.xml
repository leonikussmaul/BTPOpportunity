<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
>
    <VBox class="sapUiSmallMargin">
        <f:SimpleForm
            id="SimpleFormDisplayColumn_twoGroups234"
            editable="false"
            layout="ColumnLayout"
            columnsM="2"
            columnsL="3"
            columnsXL="4"
        >
            <f:content>
                <!-- dates -->
                <core:Title text="Overview" />
                <!-- <Label text="Account name" />
                <Text text="{accountName}" /> -->

                <!-- <Label text="Internal" />
                <Text text="{internal}" /> -->

                <!-- <Label text="Contact name" />
                <Text text="{contactName}" /> -->


                <Label text="Source" />
                <Text text="{source}" />

            

                <Label text="Region" />
                <Text text="{region}" />
                
                 <Label text="Level" />
                <Text text="{level}" />

                <!-- <Label text="Status" />
                <Text text="{status}" /> -->

              

                <core:Title text="Contact &amp; Logistics" />

                <Label text="Email" />
<Text text="{email}" />


                  <Label text="Role" visible="{= ${genieModel>/genieType} === 'Internal' }"/>
                <Text text="{role}" visible="{= ${genieModel>/genieType} === 'Internal' }" />

                <Label text="Organisation" visible="{= ${genieModel>/genieType} === 'Internal' }"/>
                <Text text="{functionalArea}"  visible="{= ${genieModel>/genieType} === 'Internal' }"/>

                <!-- <Label text="Organisational Area" /> -->
                <Text text="{orgArea}" visible="{= ${genieModel>/genieType} === 'Internal' }" />


               
                <Label text="Location" />
                <Text text="{city} " />
                <Text text="{country}" />

                <Label text="Dates" />
                <Text
                    text="{ path: 'workshopStartDate',
							type: 'sap.ui.model.type.Date',
							formatOptions: {
									style: 'medium'
						}} - { path: 'workshopEndDate',
							type: 'sap.ui.model.type.Date',
							formatOptions: {
									style: 'medium'
						}}"
                />
                <!-- <Label text="End Date" />
                <Text
                    text="{ path: 'workshopEndDate',
							type: 'sap.ui.model.type.Date',
							formatOptions: {
									style: 'medium'
						}}"
                /> -->
            </f:content>
        </f:SimpleForm>
    </VBox>
</core:FragmentDefinition>
