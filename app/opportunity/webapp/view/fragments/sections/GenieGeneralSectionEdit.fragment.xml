<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
>
    <VBox class="sapUiSmallMargin">
        <f:SimpleForm
            id="SimpleFormDisplayColumn_twoGroups234"
            editable="false"
            layout="ColumnLayout"
            columnsM="2"
            columnsL="3"
            columnsXL="4"
        >
            <f:content>
                <!-- dates -->
                <core:Title text="Overview" />

                <Label
                    text="Name"
                    required="true"
                />
                
                <Input
                    value="{editPageModel>/name}"
                    valueState="{valueState>/valueState}"
                    valueStateText="{valueState>/valueStateText}"
                    liveChange="onChangeValueState" placeholder="Enter the customer name or participant first and last name"
                />

   <Label text="Source" />
                <Input value="{editPageModel>/source}"  placeholder="Where did the lead come from?" />

               

               <!-- <Label text="Region" />
                <Input value="{editPageModel>/region}" /> -->

                  <MultiComboBox
                                    id="marketUnitFilter"
                                    placeholder="Which Region are they part of?"
                                    selectionChange="customFieldChange"
                                    value="{viewModel>/region}"
                                    showSelectAll="true"
                                    items="{
                                            path: '/opportunityMarketUnitVH',
                                            sorter: {
                                                path: 'region',
                                                descending: false,
                                                group: true
                                            },
                                            groupHeaderFactory: '.getGroupHeader'
                                        }"
                                >
                                    <core:Item
                                        key="marketUnit"
                                        text="{marketUnit}"
                                    />
                                </MultiComboBox>

                                 <Label text="Level" />
                <Select
                    id="level"
                    selectedKey="{editPageModel>/level}"
                >
                    <core:Item
                        key="Beginner"
                        text="Beginner"
                    />
                    <core:Item
                        key="Intermediate"
                        text="Intermediate"
                    />
                    <core:Item
                        key="Advanced"
                        text="Advanced"
                    />
                </Select>

                <!-- <Label text="Status" />
                                <SegmentedButton id="segmentedStatus">
                                    <items>
                                        <SegmentedButtonItem
                                            key="Lead"
                                            text="Lead"
                                            icon="sap-icon://flag-2"
                                        />
