                                            icon="sap-icon://activate"
                                        />
                                        <SegmentedButtonItem
                                            key="Completed"
                                            text="Completed"
                                            icon="sap-icon://checklist-item"
                                        />
                                    </items>
                                </SegmentedButton> -->

             

                <core:Title text="Contact &amp; Logistics" />

                <Label text="Email" />
                <Input value="{editPageModel>/email}"   placeholder="How can we contact them?"/>

                   <Label text="Role" />
                <Input value="{editPageModel>/role}"   placeholder="What is their job role?" />

                <Label text="Organisation" />
                <Input value="{editPageModel>/functionalArea}"  placeholder="Functional i.e. Services, Sales &amp; Presales.." />

             
                <Input value="{editPageModel>/orgArea}"  placeholder="Organisation i.e. CS&amp;D, CS.." />

                <Label text="Location" />
                <Input value="{editPageModel>/city}"  placeholder="City" />
                <Input value="{editPageModel>/country}"  placeholder="Country" />

                <Label text="Workshop Dates" />
                <DateRangeSelection
                    id="DRS3"
                    placeholder="i.e. Jul 8th, 2024 - Jul 9th, 2024"
                    showCurrentDateButton="true"
                    showFooter="true"
                    change="handleChange"
                    value="{
                                            'type': 'sap.ui.model.type.DateInterval',
                                            'parts': [
                                                {
                                                    'type': 'sap.ui.model.type.Date',
                                                    'path': '{editPageModel>/workshopStartDate}'
                                                },
                                                {
                                                    'type': 'sap.ui.model.type.Date',
                                                   'path': '{editPageModel>/workshopEndDate}'
                                                }
                                            ]
                                        }"
                />
            </f:content>
        </f:SimpleForm>
    </VBox>
</core:FragmentDefinition>
