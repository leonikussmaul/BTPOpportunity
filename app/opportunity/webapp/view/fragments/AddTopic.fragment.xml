<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Dialog 
          class="sapUiPopupWithPadding" id="topicDialog">
		<customHeader>
			<Bar>
				<contentMiddle>
					<Title text="Add New Topic"/>
				</contentMiddle>
				<contentRight>
					<Button icon="sap-icon://decline" press="onCancelDialogPress" />
				</contentRight>
			</Bar>
		</customHeader>
		<Input type="Text"
           value=""
           id="topicInput"
           liveChange=".onTopicInputChange" />
		<footer>
			<Toolbar design="Auto">
				<content>
					<ToolbarSpacer />
					<Button type="Accept" text="{i18n>Submit}" press="onSubmitTopic" />
				</content>
			</Toolbar>
		</footer>
	</Dialog>
</core:FragmentDefinition>
