<mvc:View
    controllerName="opportunity.opportunity.controller.GenieAIWorkshop"
    xmlns:u="sap.uxap"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:form="sap.ui.layout.form"
    xmlns:f="sap.f"
    xmlns:l="sap.ui.layout"
    xmlns:t="sap.ui.table"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:suite="sap.suite.ui.commons"
    xmlns:rte="sap.ui.richtexteditor"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:tnt="sap.tnt"
    xmlns:dnd="sap.ui.core.dnd"
    xmlns:dnd-grid="sap.f.dnd"
    xmlns:commons="sap.suite.ui.commons"
    xmlns:micro="sap.suite.ui.microchart"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
>
    <Page
        id="GenieAIDetail"
        showHeader="false"
    >
        <content>
            <u:ObjectPageLayout
                id="ObjectPageLayout"
                showTitleInHeaderContent="true"
                showEditHeaderButton="true"
                editHeaderButtonPress="handleEditBtnPress"
                upperCaseAnchorBar="false"
            >
                <u:headerTitle>
                    <u:ObjectPageDynamicHeaderTitle>
                        <u:expandedHeading>
                            <HBox>
                                <Avatar
                                    class="sapUiTinyMarginEnd"
                                    backgroundColor="{path:'workshopType', formatter:'.formatter.genieColorFormatter'}"
                                    src="{path:'workshopType', formatter:'.formatter.genieTypeFormatter'}"
                                />
                                <VBox>
                                    <Title text="{name}" />
                                    <Text
                                        text="{workshopType}"
                                        class="sapUiNeutral"
                                    />
                                </VBox>
                            </HBox>
                        </u:expandedHeading>
                        <u:snappedHeading>
                            <FlexBox
                                fitContainer="true"
                                alignItems="Center"
                            >
                                <Avatar
                                    class="sapUiTinyMarginEnd"
                                    backgroundColor="{path:'workshopType', formatter:'.formatter.genieColorFormatter'}"
                                    src="{path:'workshopType', formatter:'.formatter.genieTypeFormatter'}"
                                />
                                <Title
                                    text="{name}"
                                    wrapping="true"
                                />
                            </FlexBox>
                        </u:snappedHeading>

                        <u:navigationActions>
                            <OverflowToolbarButton
                                type="Transparent"
                                icon="sap-icon://full-screen"
                                press=".handleFullScreen"
                                id="enterFullScreenBtn"
                                tooltip="Enter Full Screen Mode"
                            />
                            <OverflowToolbarButton
                                type="Transparent"
                                icon="sap-icon://exit-full-screen"
                                press=".handleExitFullScreen"
                                id="exitFullScreenBtn"
                                tooltip="Exit Full Screen Mode"
                                visible="false"
                            />
                            <OverflowToolbarButton
                                type="Transparent"
                                icon="sap-icon://decline"
                                press=".handleClose"
                                tooltip="Close middle column"
                            />
                        </u:navigationActions>
                    </u:ObjectPageDynamicHeaderTitle>
                </u:headerTitle>
                <u:headerContent>
                    <FlexBox wrap="Wrap">
                        <VBox visible="{= ${level} !== null}">
                            <Title>
                                <Label
                                    text="Level"
                                    class="sapUiTinyMarginTop"
                                />
                            </Title>
                            <ObjectStatus
                                text="{level}"
                                state="{path: 'level', formatter:'.formatter.genieLevelFormatter'}"
                                class="sapMObjectStatusLarge sapUiTinyMarginTop"
                            />
                        </VBox>

                        <!-- level -->
                        <VBox
                            visible="{= ${month} !== null}"
                            class="sapUiMediumMarginBeginEnd"
                        >
                            <Title>
                                <Label
                                    text="Delivery"
                                    class="sapUiTinyMarginTop"
                                />
                            </Title>
                            <ObjectStatus
                                text="{month}"
                                class="sapMObjectStatusLarge sapUiTinyMarginTop"
                            />
                        </VBox>

                        <l:VerticalLayout class="sapUiResponsiveMargin">
                            <VBox>
                                <ObjectStatus
                                    state="Information"
                                    text="{i18n>status}"
                                    icon="sap-icon://message-information"
                                />
                                <HBox
                                    alignItems="Center"
                                    justifyContent="Center"
                                    width="100%"
                                >
                                    <SegmentedButton
                                        selectionChange="onSegmentPressed"
                                        id="segmentedStatusObject"
                                        width="300px"
                                        class="sapUiTinyMarginBeginEnd"
                                        selectedKey="{status}"
                                    >
                                        <items>
                                            <SegmentedButtonItem
                                                icon="sap-icon://flag-2"
                                                text=""
                                                width="50px"
                                                key="Lead"
                                                tooltip="Lead"
                                            />
                                            <SegmentedButtonItem
                                                icon="sap-icon://overlay"
                                                text=""
                                                width="50px"
                                                key="Opportunity"
                                                tooltip="Opportunity"
                                            />
                                            <SegmentedButtonItem
                                                icon="sap-icon://pause"
                                                text=""
                                                width="50px"
                                                key="Paused"
                                                tooltip="Paused"
                                            />
                                            <SegmentedButtonItem
                                                icon="sap-icon://activate"
                                                text=""
                                                width="50px"
                                                key="Delivery"
                                                tooltip="Delivery"
                                            />
                                            <SegmentedButtonItem
                                                icon="sap-icon://checklist-item"
                                                text=""
                                                width="50px"
                                                key="Completed"
                                                tooltip="Completed"
                                            />
                                        </items>
                                    </SegmentedButton>
                                </HBox>
                            </VBox>
                        </l:VerticalLayout>
                    </FlexBox>
                </u:headerContent>
                <!-- section fragments -->
                <u:sections>
                    <u:ObjectPageSection
                        id="idGeneralSection"
                        titleUppercase="false"
                        title="Workshop Information"
                    >
                        <u:ObjectPageSubSection
                            id="idGeneralSubSection"
                            visible="{= !${editModel>/editMode}}"
                        >
                            <!-- <core:Fragment
                                id="idGeneralFragment"
                                fragmentName="opportunity.opportunity.view.fragments.sections.GenieGeneralSection"
                                type="XML"
                            /> -->

                            <form:SimpleForm
                                editable="false"
                                layout="ColumnLayout"
                                columnsM="2"
                                columnsL="3"
                                columnsXL="4"
                            >
                                <form:content>
                                    <core:Title text="Overview" />

                                    <Label text="Description" />
                                    <Text text="{description}" />

                                    <!-- <Label text="Status" />
                <Text text="{status}" /> -->

                                    <core:Title text="Logistics" />

                                    <Label text="Location" />
                                    <Text text="{city} " />
                                    <Text text="{country}" />

                                    <Label text="Dates" />
                                    <Text
                                        text="{ path: 'workshopStartDate',
							type: 'sap.ui.model.type.Date',
							formatOptions: {
									style: 'medium'
						}} - { path: 'workshopEndDate',
							type: 'sap.ui.model.type.Date',
							formatOptions: {
									style: 'medium'
						}}"
                                    />
                                </form:content>
                            </form:SimpleForm>
                        </u:ObjectPageSubSection>

                        <u:ObjectPageSubSection
                            id="idGeneralSectionEdit"
                            visible="{= ${editModel>/editMode}}"
                        >
                            <form:SimpleForm
                                editable="false"
                                layout="ColumnLayout"
                                columnsM="2"
                                columnsL="3"
                                columnsXL="4"
                            >
                                <form:content>
                                    <core:Title text="Overview" />

                                    <Label text="Description" />
                                    <Input
                                        value="{editPageModel>/description}"
                                    />

                                    <Label text="Level" />
                                    <ComboBox
                                        id="level"
                                        selectedKey="{editPageModel>/level}"
                                    >
                                        <items>
                                            <core:ListItem
                                                key="Beginner"
                                                text="Beginner"
                                            />
                                            <core:ListItem
                                                key="Intermediate"
                                                text="Intermediate"
                                            />
                                            <core:ListItem
                                                key="Advanced"
                                                text="Advanced"
                                            />
                                        </items>
                                    </ComboBox>

                                    <!-- <Label text="Status" />
                <Text text="{status}" /> -->

                                    <core:Title text="Logistics" />

                                    <Label text="Location" />
                                    <Input value="{editPageModel>/city}" />
                                    <Input value="{editPageModel>/country}" />

                                    <Label text="Workshop Dates" />
                                    <DateRangeSelection
                                        id="DRS3"
                                        placeholder="i.e. Jul 8th, 2024 - Jul 9th, 2024"
                                        showCurrentDateButton="true"
                                        showFooter="true"
                                        change="handleChange"
                                        value="{
                                            'type': 'sap.ui.model.type.DateInterval',
                                            'parts': [
                                                {
                                                    'type': 'sap.ui.model.type.Date',
                                                    'path': '{editPageModel>/workshopStartDate}'
                                                },
                                                {
                                                    'type': 'sap.ui.model.type.Date',
                                                   'path': '{editPageModel>/workshopEndDate}'
                                                }
                                            ]
                                        }"
                                    />
                                </form:content>
                            </form:SimpleForm>
                            <!-- <core:Fragment
                                fragmentName="opportunity.opportunity.view.fragments.sections.GenieGeneralSectionEdit"
                                type="XML"
                            /> -->
                        </u:ObjectPageSubSection>
                    </u:ObjectPageSection>

                    <u:ObjectPageSection
                        id="participants"
                        titleUppercase="false"
                        title="Participants"
                    >
                        <u:ObjectPageSubSection>
                            <!-- participant table -->

                            <!-- <List
                                id="participantList"
                                items="{}"
                                mode="Delete"
                                includeItemInSelection="true"
