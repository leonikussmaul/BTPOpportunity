                                    />
                                </noData>
                            </List> -->

                            <core:Fragment
                                fragmentName="opportunity.opportunity.view.fragments.sections.GenieParticipantTables"
                                type="XML"
                            />
                            <!-- <Table
                                id="participantTable"
                                items="{}"
                                mode="Delete"
                                includeItemInSelection="true"
                                selectionChange="onSelectParticipant"
                                delete="onDeleteParticipant"
                            >
                                <headerToolbar>
                                    <OverflowToolbar>
